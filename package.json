{
  "name": "@funkia/jabz",
  "version": "0.0.19",
  "description": "Powerful and practical abstractions.",
  "main": "index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "build": "tsc -P ./tsconfig-release.json; tsc -P ./tsconfig-release.json --outDir 'dist/es' --target es6 --module es6",
    "test": "nyc mocha --recursive test/**/*.ts",
    "test-watch": "mocha --watch --compilers ts:ts-node/register test/**/*.ts",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "release-major": "xyz --repo git@github.com:funkia/jabz.git --increment major",
    "release-minor": "xyz --repo git@github.com:funkia/jabz.git --increment minor",
    "release-patch": "xyz --repo git@github.com:funkia/jabz.git --increment patch",
    "build-docs": "node metalsmith.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paldepind/jabz.git"
  },
  "keywords": [
    "monad"
  ],
  "author": "Funkia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paldepind/jabz/issues"
  },
  "homepage": "https://github.com/paldepind/jabz#readme",
  "dependencies": {
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "js-yaml": "^3.8.4",
    "jstransformer-markdown-it": "^2.0.0",
    "marked": "^0.3.6",
    "metalsmith": "^2.3.0",
    "metalsmith-prism": "^3.0.2",
    "metalsmith-pug": "^2.0.0",
    "metalsmith-sass": "^1.4.0",
    "metalsmith-watch": "^1.0.3",
    "mocha": "^2.5.3",
    "normalize.css": "^5.0.0",
    "nyc": "^8.4.0",
    "ts-node": "^0.8.0",
    "typescript": "^2.3.2",
    "xyz": "0.5.x"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "json",
      "html",
      "text"
    ]
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  }
}
